<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SerializedActivity">

    <TextView
        android:id="@+id/serialized_send_title"
        android:layout_width="120dp"
        android:layout_height="41dp"
        android:text="@string/serialized_send_title"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/serialized_send_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/serialized_receive_text"
        android:layout_width="270dp"
        android:layout_height="148dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/serialized_receive_title" />

    <EditText
        android:id="@+id/serialized_send_text"
        android:layout_width="270dp"
        android:layout_height="148dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/serialized_buttons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/serialized_send_title" />

    <LinearLayout
        android:id="@+id/serialized_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/serialized_receive_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/serialized_send_text">

        <Button
            android:id="@+id/serialized_btn_send_xml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="@string/serialized_btn_send_xml" />

        <Button
            android:id="@+id/serialized_btn_send_json"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="@string/serialized_btn_send_json" />

        <Button
            android:id="@+id/serialized_btn_send_protobuf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/serialized_btn_send_protobuf" />
    </LinearLayout>

    <TextView
        android:id="@+id/serialized_receive_title"
        android:layout_width="120dp"
        android:layout_height="41dp"
        android:layout_marginBottom="64dp"
        android:text="@string/serialized_logs_title"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/serialized_receive_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/serialized_buttons" />
</androidx.constraintlayout.widget.ConstraintLayout>